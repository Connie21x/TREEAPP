<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:orientation="vertical"
    android:background="@color/grayLight">

    <View
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/topView"/>

    <LinearLayout
        android:id="@+id/layoutSpeciesOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="2">

        <ImageView
            android:layout_weight="1"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/baseline_account"
            android:layout_marginTop="30dp"
            android:id="@+id/imageNewTree"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_weight="1"
            android:id="@+id/userNameProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User"
            android:layout_marginTop="15dp"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/dosis"
            android:textStyle="bold"/>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_below="@+id/layoutSpeciesOne"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="40dp"
        app:cardCornerRadius="15dp"
        android:id="@+id/cardViewSpecies">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="3"
            android:background="@drawable/roundbutton">

            <LinearLayout
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Catalogue"
                    android:textSize="18sp"
                    android:fontFamily="@font/dosis"/>
                <ImageView
                    android:id="@+id/onCatalogue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_catalogue"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingTop="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Map"
                    android:textSize="18sp"
                    android:fontFamily="@font/dosis"/>
                <ImageView
                    android:id="@+id/onMap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_map"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingTop="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Report"
                    android:textSize="18sp"
                    android:fontFamily="@font/dosis"/>
                <ImageView
                    android:id="@+id/onReport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_report"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingTop="10dp"/>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/layoutSpeciesTwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_below="@+id/cardViewSpecies"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp">
        
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="6dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_email"
                android:layout_marginTop="3dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/emailProfile"
                android:paddingLeft="10dp"
                android:textSize="25sp"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/dosis"
                android:textColor="@color/colorPrimaryDark"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="6dp">
            <ImageView
                android:layout_marginTop="3dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_phone"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/phoneProfile"
                android:paddingLeft="10dp"
                android:textSize="25sp"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/dosis"
                android:textColor="@color/colorPrimaryDark"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="6dp">

            <ImageView
                android:layout_marginTop="3dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_place"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/placeProfile"
                android:paddingLeft="10dp"
                android:textSize="25sp"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/dosis"
                android:textColor="@color/colorPrimaryDark"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/logout"
        android:background="@drawable/custom_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginRight="32dp"
        android:layout_marginLeft="32dp"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/dosis"
        android:layout_below="@+id/layoutSpeciesTwo"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Logout"
        android:textColor="@color/white"/>

</RelativeLayout>