<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/addNewSpecies"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/dosis"
        android:text="Report a New Species"
        android:textSize="26sp"
        android:textColor="#26061C"
        android:textStyle="bold"/>

    <ImageView
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/ic_image"
        android:scaleType="fitXY"
        android:id="@+id/imageViewAdd"/>

    <EditText
        android:id="@+id/inputImageName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageViewAdd"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:fontFamily="@font/dosis"
        android:hint="Enter Species Name"
        android:textColor="#26061C"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/inputImageCommonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/inputImageName"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:fontFamily="@font/dosis"
        android:hint="Enter Local Name"
        android:textColor="#26061C"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textViewProgress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/inputImageCommonName"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/dosis_bold"
        android:gravity="center"
        android:text="0.0%"
        android:textColor="#3D3039"
        android:textSize="25sp" />

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_below="@id/textViewProgress"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"/>

    <LinearLayout
        android:id="@+id/linearLatLng"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/progressBar"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:orientation="horizontal"
        android:layout_marginRight="30dp">

        <TextView
            android:id="@+id/latSpeciesTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:fontFamily="@font/dosis"
            android:hint="Lat"
            android:padding="5dp"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textSize="20sp"
            android:background="@drawable/text_style"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/lngSpeciesTv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/text_style"
            android:fontFamily="@font/dosis"
            android:hint="Lng"
            android:padding="5dp"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textSize="20sp"
            android:textAlignment="center"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnUpload"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/linearLatLng"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/custom_button"
        android:fontFamily="@font/dosis_bold"
        android:text="Add Species"
        android:textColor="#26061C"
        android:textSize="18sp" />

  </RelativeLayout>